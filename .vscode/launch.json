{
    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Chainlit: Run App",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/.venv/bin/chainlit",
            "args": [
                "run",
                "app.py",
                "--port",
                "8989"
            ],
            "justMyCode": true,
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Python: Current File with Args",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": ["--foo", "bar"]
            }
    ]
}
